---
import JokeOverlay from "../joke-overlay/JokeOverlay";
import Title from "../sections/title.astro";
import AboutMe from "../sections/about-me.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jua&display=swap"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="favicon.png" type="image/x-icon" />
    <title>Gavin Yan - Queen's Student</title>
  </head>
  <body class="font-jua overflow-x-hidden bg-orange-100 text-neutral-600">
    <!-- <JokeOverlay client:load /> -->
    <img class="ml-auto h-[15vw] w-3/5" src="blue-box.svg" alt="Blue Box" />
    <Title />
    <hr class="-rotate-6 border-black bg-black md:border-2" />
    <main class="relative mt-12 px-8 md:mt-28 lg:mt-48">
      <img src="yellow-cylinder.svg" class="absolute left-0 top-1/3 -z-10" />
      <img src="red-ellipse.svg" class="absolute right-0 top-2/3 -z-10" />
      <AboutMe />
    </main>
  </body>
</html>
