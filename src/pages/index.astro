---
import JokeOverlay from "../sections/joke-overlay/JokeOverlay";
import Title from "../sections/title.astro";
import AboutMe from "../sections/about-me.astro";
import Skills from "../sections/skills/skills.astro";
import Projects from "../sections/projects/projects.astro";
import GithubCard from "../sections/github/GithubCard";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Jua&family=Quicksand:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="favicon.png" type="image/x-icon" />
    <title>Gavin Yan - Queen's Student</title>
  </head>
  <body class="overflow-x-hidden bg-orange-100 font-jua text-neutral-600">
    <!-- <JokeOverlay client:load /> -->
    <img class="ml-auto h-[15vw] w-3/5" src="blue-box.svg" alt="Blue Box" />
    <Title />
    <hr class="-rotate-6 border-black bg-black md:border-2" />

    <main class="relative m-12 md:mt-28 lg:mt-48">
      <div class="flex flex-col gap-6 md:gap-20">
        <AboutMe />
        <Skills />
        <Projects />
        <GithubCard client:idle />
      </div>
    </main>

    <footer
      class="flex items-center justify-between bg-neutral-500 px-10 py-5 text-slate-200"
    >
      <div>Â© 2024 Gavin Yan | All rights reserved</div>
      <div class="flex items-center">
        <div>
          <h1 class="text-xl">Website's Source Code</h1>
          <h2>I had a lot of fun building this.</h2>
        </div>
        <div class="ml-2 mr-4">-&gt;</div>
        <a href="https://github.com/yangavin/portfolio" target="_blank"
          ><img src="github.svg" alt="GitHub Logo" /></a
        >
      </div>
    </footer>
  </body>
</html>
