---
type Props = {
  skills: {
    logo: string;
    title: string;
    url: string;
  }[];
  small?: boolean;
};
const { skills, small } = Astro.props;
---

<div>
  <h2 class="mb-3 text-center text-2xl md:mb-10 md:text-6xl"><slot /></h2>
  <div
    class="m-auto flex w-11/12 flex-wrap justify-center gap-x-5 gap-y-3 md:gap-x-7 md:gap-y-6"
  >
    {
      skills.map(({ logo, title, url }) => {
        return (
          <a
            href={url}
            class="flex w-fit grow flex-col items-center gap-2 md:gap-6"
          >
            <img
              src={logo}
              alt={title}
              class={small ? "w-5 md:w-20" : "w-6 md:w-28"}
            />
            <span
              class={
                small ? "text-[6px] md:text-2xl" : "text-[8px] md:text-4xl"
              }
            >
              {title}
            </span>
          </a>
        );
      })
    }
  </div>
</div>
